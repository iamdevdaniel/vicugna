{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "experimentalDecorators": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./app/*"],
      "@types": ["./types/index"],
      "@assets/*": ["./assets/*"],
      "@utils/*": ["./utils/*"],
      "@database": ["./database/index"],
      "@components": ["./components/index"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
